{>layout/}
{<content}
<div data-viewmodel="ContainerViewModel" data-model="{info|js}">
  <button class="pure-button button-success" 
          data-bind="click: start, visible:!running(), disabled: start.isBusy" 
          style="{?info.State.Running}display: none{/info.State.Running}">
    <i class="fa fa-play"></i> 
    Start
  </button>
  <button class="pure-button button-error" 
          data-bind="click: stop, visible: running(), disabled: stop.isBusy" 
          style="{^info.State.Running}display: none{/info.State.Running}">
    <i class="fa fa-stop"></i> 
    Stop
  </button>
  <button class="pure-button button-secondary" 
          data-bind="click: restart, visible: running(), disabled: restart.isBusy" 
          style="{^info.State.Running}display: none{/info.State.Running}">
    <i class="fa fa-refresh" data-bind="css: {'fa-spin': restart.isBusy}"></i> 
    Restart
  </button>
  <button class="pure-button button-error" 
          data-bind="click: remove, visible: !running(), disabled: start.isBusy" 
          style="{?info.State.Running}display: none{/info.State.Running}; float:right">
    <i class="fa fa-trash-o"></i> 
    Remove
  </button>
</div>
<pre>{info|js}</pre>
{/content}