<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel='stylesheet' href='/bower_components/pure/pure-min.css' />
  <link rel='stylesheet' href='/stylesheets/pure-sidemenu.css' />
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
</head>
<body>
  <div id="layout" data-viewmodel="MenuViewModel" data-bind="css:{active: menuVisible}">
    <!-- Menu toggle -->
    <a href="#menu" id="menuLink" class="menu-link" data-bind="click: toggleMenuVisible">
      <!-- Hamburger icon -->
      <span></span>
    </a>

    <div id="menu">
      {#mainMenu}
      {+mainMenu}
      <div class="pure-menu pure-menu-open">
        <a class="pure-menu-heading" href="/">Containers</a>
        <ul class="pure-menu-list">
          <li class="pure-menu-item">
            <a class="pure-menu-link" href="/app/new"><i class="fa fa-plus fa-fw"></i>Create new app</a>
          </li>
          {#containers}
            <li data-viewmodel="MenuListContainerVM" 
                data-model="{.|js}" 
                class="container-state-{state} {?selected}pure-menu-selected{/selected}" 
                data-bind="css:{'container-state-running':running(), 'container-state-stopped':!running()}">
              <a class="pure-menu-link" href="/container/{id}">
                <i class="fa fa-play fa-fw"></i>
                <i class="fa fa-stop fa-fw"></i>
                {name}
              </a>
            </li>
          {/containers}
        </ul>
      </div>
      {/mainMenu}
      {/mainMenu}
    </div>

    <div id="main">      
      <div class="content">
        
        {#content}
        {+content}
        This is the base content.
        {/content}
        {/content}
      </div>
    </div>
  </div>
  <script src="/bower_components/es6-promise/promise.js"></script>
  <script src="/bower_components/requirejs/require.js" data-main="/javascripts/main"></script>
</body>
</html>