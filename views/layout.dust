<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel='stylesheet' href='/bower_components/pure/pure-min.css' />
  <link rel='stylesheet' href='/stylesheets/pure-sidemenu.css' />
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
</head>
<body>
  <div id="layout" data-viewmodel="MenuViewModel" data-bind="css:{active: menuVisible}">
    <!-- Menu toggle -->
    <a href="#menu" id="menuLink" class="menu-link" data-bind="click: toggleMenuVisible">
      <!-- Hamburger icon -->
      <span></span>
    </a>

    <div id="menu">
      {#mainMenu}
      {+mainMenu}
      This is where the menu goes
      {/mainMenu}
      {/mainMenu}
    </div>

    <div id="main">      
      <div class="content">
        
        {#content}
        {+content}
        This is the base content.
        {/content}
        {/content}
      </div>
    </div>
  </div>
  <script src="/bower_components/es6-promise/promise.js"></script>
  <script src="/bower_components/requirejs/require.js" data-main="/javascripts/main"></script>
</body>
</html>